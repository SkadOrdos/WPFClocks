<Window x:Class="WClocks.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WClocks"
        mc:Ignorable="d"
        Title="About WClocks" Height="120" Width="400" WindowStyle="ToolWindow" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" Topmost="True">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="28*"></ColumnDefinition>
            <ColumnDefinition Width="75*"></ColumnDefinition>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="28*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image Source="/icons/clock.ico" Stretch="Uniform" Margin="5,20,5,20"></Image>
        <TextBlock x:Name="textAbout" Grid.Column="1"  Grid.ColumnSpan="2" VerticalAlignment="Center" Margin="5,0,5,0">Version</TextBlock>
        <Button x:Name="btnOK" Grid.Column="3" Margin="5,20,5,40" Click="btnOK_Click">OK</Button>
    </Grid>
</Window>
